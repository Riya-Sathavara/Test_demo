<odoo>
    <data>
        <!-- Added basic required details in employee view -->
        <record id="view_employee_form_inherit_saudi_gr" model="ir.ui.view">
            <field name="name">hr.employee.saudi.gr</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <page position="inside">
                   <page string="GR Operation" name='gr_operation'>
                       <group col="4">
                           <field name="arabic_name"/>
                           <field name="employee_code" />
                            <field name="date_of_joining"/>
                       </group>
                   </page>
                </page>
            </field>
        </record>
    </data>
</odoo>
